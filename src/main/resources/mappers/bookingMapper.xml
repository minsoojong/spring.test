<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

 
<mapper namespace="com.sksalstn.test.ajax.booking.repository.BookingRepository">

	<select id="selectBookingList" 
	resultType="com.sksalstn.test.ajax.booking.domain.Booking">
		SELECT 
			`id`
			, `name`
			, `headcount`
			, `day`
			, `date`
			, `phoneNumber`
			, `state`
			, `createdAt`
			, `updatedAt`
		FROM 
			`booking`
		ORDER BY
			`id` DESC
			
	</select>
	
	<insert id="insertBooking" parameterType="map">
		INSERT INTO
			`booking`
		(
			`name`
			, `headcount`
			, `day`
			, `date`
			, `phoneNumber`
			, `state`
		)
		VALUE
		(
			#{name}
			, #{headcount}
			, #{day}
			, #{date}
			, #{phoneNumber}
			, #{state}
		)
		
	
	</insert>
	
	<delete id="deleteBooking" parameterType="int">
		DELETE FROM 
			`booking`
		WHERE
			`id` = #{id}
	
	</delete>
	
	<select id="selectBooking" parameterType="map"
	resultType="com.sksalstn.test.ajax.booking.domain.Booking">
		SELECT 
			`id`
			, `name`
			, `headcount`
			, `day`
			, `date`
			, `phoneNumber`
			, `state`
			, `createdAt`
			, `updatedAt`
		FROM 
			`booking`
		WHERE 
			`name` = #{name}
			AND `phoneNumber` = #{phoneNumber}
	
	
	
	</select>
	

</mapper>